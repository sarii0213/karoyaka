<% content_for :title do %>
  <div class="header-title">マイページ</div>
<% end %>

<div class="card card-style">
  <div class="content">
    <h1>Users#show</h1>
    <ul class="">
      <li>username: <%= @user.username %></li>
      <li>email: <%= @user.email %></li>
    </ul>

    <%= link_to '→ 編集する', edit_user_registration_path %><br>
    <%= link_to '→ ログアウト', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: '本当にログアウトしますか？' } %>
    <br>
    <%= link_to '→ 退会する', user_registration_path, data: { turbo_method: :delete, turbo_confirm: '本当に退会しますか？' } %>
  </div>
</div>

<div class="card card-style">
  <div class="content text-center">
    <h3 class="font-18">捨て活 <span class="font-24"><%= @day_what %></span>日目</h3>
    <p class="font-10 line-height-xs color-green-dark my-3">
      <%= render 'achievements/chart', days: @days %>
    </p>
    <p class="font-12 mb-2">捨て活 とは、<br>手放したいものを見つけたり 実際に手放すこと。<br>コツコツ手放して 軽やかな生活を。</p>
    <%= link_to '記録をもっと見る', achievement_path,
                class: 'btn btn-3d btn-xxs rounded-xs font-700 shadow-s border-green-dark bg-green-light' %>
  </div>
</div>

<% if @user.favorite_quotes.present? %>
  <h3 class="mx-4 mb-2 font-18">お気に入りの名言をランダムに表示</h3>
  <%= render 'quotes/quote', quote: @quote %>
<% end %>
